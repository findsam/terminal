{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#E36464",
                    "style": "plain",
                    "template": "~/sam",
                    "type": "session"
                },
                {
                    "foreground": "#62ED8B",
                    "style": "plain",
                    "template": " ➜ ",
                    "type": "text"
                },
                {
                    "foreground": "#56B6C2",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#C2C206",
                    "style": "plain",
                    "template": "{{ .HEAD }}",
                    "type": "git",
                    "properties": {
                        "display_status": true,
                        "display_stash_count": true
                    }
                },
                {
                    "foreground": "#62ED8B",
                    "style": "plain",
                    "template": " ➜ ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
